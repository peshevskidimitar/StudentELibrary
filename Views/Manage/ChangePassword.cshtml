@model StudentELibrary.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Промена на лозинка";
}

<div class="row d-flex justify-content-center mx-3 my-5">
    <div class="col-12 col-md-6">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Промена на лозинка</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger d-none" })
            <div class="form-floating my-3">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control shadow-none", placeholder = " " })
                @Html.LabelFor(m => m.OldPassword, "Тековна лозинка", new { @class = "" })
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating my-3">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control shadow-none", placeholder = " " })
                @Html.LabelFor(m => m.NewPassword, "Нова лозинка", new { @class = "" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating my-3">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control shadow-none", placeholder = " " })
                @Html.LabelFor(m => m.ConfirmPassword, "Потврди лозинка", new { @class = "" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group my-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Промени лозинка" class="btn btn-primary shadow-none" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
