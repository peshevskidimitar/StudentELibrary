@model StudentELibrary.Models.Resource

@{
    ViewBag.Title = "Нов ресурс";
}

<div class="mx-3 my-5">
    @using (Html.BeginForm("Create", "Resources", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <div class="form-horizontal">
                    <h4>Нов ресурс</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "input-group-text" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control shadow-none" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "input-group-text" })
                        @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control shadow-none" } })
                        @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.Language, htmlAttributes: new { @class = "input-group-text" })
                        @Html.EditorFor(model => model.Language, new { htmlAttributes = new { @class = "form-control shadow-none" } })
                        @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "input-group-text" })
                        @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control textarea shadow-none" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.DatePublished, htmlAttributes: new { @class = "input-group-text" })
                        @Html.TextBoxFor(model => model.DatePublished, "{0:yyyy-MM-dd}", new { @class = "form-control shadow-none", type = "date" })
                        @Html.ValidationMessageFor(model => model.DatePublished, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group has-validation mb-3">
                        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "input-group-text" })
                        @Html.TextAreaFor(model => model.Notes, htmlAttributes: new { @class = "form-control textarea shadow-none" })
                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.SubjectId, htmlAttributes: new { @class = "input-group-text" })
                        @Html.DropDownListFor(model => model.SubjectId, Model.AllSubjects, "Изберете предмет", new { @class = "form-control shadow-none" })
                        @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.ImageURL, htmlAttributes: new { @class = "input-group-text" })
                        @Html.EditorFor(model => model.ImageURL, new { htmlAttributes = new { @class = "form-control shadow-none" } })
                        @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "input-group-text" })
                        @Html.TextBoxFor(model => model.File, new { @class = "form-control shadow-none", type = "file" })
                        @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                    </div>

                    <div class="btn-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Додади" class="btn btn-primary shadow-none" />
                        </div>
                    </div>

                    <div>
                        @Html.ActionLink("Назад", "Index")
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}