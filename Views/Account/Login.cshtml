@using StudentELibrary.Models
@model LoginViewModel
@{
    ViewBag.Title = "Најава";
}

<div class="mx-3 my-5">
    <section id="loginForm">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Најави се</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-floating my-3">

                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control shadow-none", placeholder = " " })
                        @Html.LabelFor(m => m.Email, "Е-пошта", new { @class = "" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating my-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control shadow-none", placeholder = " " })
                        @Html.LabelFor(m => m.Password, "Лозинка", new { @class = "" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group my-3">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input checkbox shadow-none" })
                                @Html.LabelFor(m => m.RememberMe, "Запомни ме?")
                            </div>
                        </div>
                    </div>
                    <div class="form-group my-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Најави се" class="btn btn-primary shadow-none" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Нов корисник", "Register")
                    </p>
                }
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}