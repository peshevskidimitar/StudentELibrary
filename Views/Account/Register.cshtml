@model StudentELibrary.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрација";
}

<div class="mx-3 my-5">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <h4>Регистрирај се</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger", style = "display: none;" })
                <div class="form-floating my-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control shadow-none", placeholder = " " })
                    @Html.LabelFor(m => m.Email, "Е-пошта", new { @class = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating my-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control shadow-none", placeholder = " " })
                    @Html.LabelFor(m => m.Password, "Лозинка", new { @class = "" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-floating my-3">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control shadow-none", placeholder = " " })
                    @Html.LabelFor(m => m.ConfirmPassword, "Потврди лозинка", new { @class = "" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary shadow-none" value="Регистрирај се" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
