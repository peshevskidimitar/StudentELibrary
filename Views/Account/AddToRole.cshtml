@model StudentELibrary.Models.AddToRole

@{
    ViewBag.Title = "Улоги";
}

<div class="mx-3 my-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <div class="form-horizontal">
                    <h4>Додели/промени улога</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "input-group-text" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control shadow-none" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        @Html.LabelFor(model => model.SelectedRole, htmlAttributes: new { @class = "input-group-text" })
                        @Html.DropDownListFor(model => model.SelectedRole, new SelectList(Model.Roles), "Избери улога", new { @class = "form-control shadow-none" })
                        @Html.ValidationMessageFor(model => model.SelectedRole, "", new { @class = "text-danger" })
                    </div>

                    <div class="btn-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Додади" class="btn btn-primary shadow-none" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}